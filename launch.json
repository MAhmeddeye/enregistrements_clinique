{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Android",
      "program": "${workspaceFolder}/.vscode/launchReactNative.js",
      "request": "launch",
      "type": "reactnative",
      "platform": "android"
    },
    {
      "name": "Attach to Hermes application",
      "type": "reactnative",
      "request": "attach",
      "cwd": "${workspaceFolder}",
      "platform": "android",
      "target": "device"
    },
    {
      "name": "Debug iOS",
      "program": "${workspaceFolder}/.vscode/launchReactNative.js",
      "request": "launch",
      "type": "reactnative",
      "platform": "ios"
    },
    {
      "name": "Attach to packager",
      "request": "attach",
      "type": "reactnative"
    }
  ]
}
